  };

  const handleFilesChange = (files: File[]) => {
    setForm((prev) => ({
      ...prev,
      files: files,
      // If we're setting files for the first time, set the first one as default
      defaultFileName: prev.defaultFileName || (files.length > 0 ? files[0].name : ""),
